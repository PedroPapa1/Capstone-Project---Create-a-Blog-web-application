<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <div class="header">
      <nav class="container">
        <h1 class="background-text title">X</h1>
      </nav>
    </div>
    <div class="container">
      <section class="section">
        <h2 style="margin-top: 30px" class="background-text">New Post</h2>
        <div class="main-container">
          <div class="card">
            <form action="/new-post" method="POST" class="new-post-form">
              <input type="text" name="title" placeholder="Title" class="form-input" required />
              <textarea
                name="content"
                placeholder="Content"
                class="form-input"
                style="height: 100px; resize: none"
                required
              ></textarea>
              <div class="actions">
                <button class="button-submit button" type="submit">SUBMIT</button>
              </div>
            </form>
          </div>
        </div>
      </section>
      <hr />

      <h2 class="background-text" style="margin-top: 30px">Posts</h2>
      <% posts.forEach(post => { %>
      <div class="main-container">
        <div class="card">
          <h3 class="post-title"><%= post.title %></h3>
          <p><%= post.content %></p>
          <div class="actions">
            <a href="/edit-post/<%= post.id %>" class="button edit">EDIT</a>
            <form action="/delete-post/<%= post.id %>" method="POST" style="display: inline">
              <button class="button-delete button" type="submit">DELETE</button>
            </form>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
  </body>
</html>
