<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <nav class="header">
      <div class="container">
        <h1 class="background-text title">X</h1>
      </div>
    </nav>
    <div class="container">
      <section class="section">
        <h2 class="background-text section-title">New Post</h2>
        <div class="main-container">
          <div class="card">
            <form action="/new-post" method="POST" class="new-post-form">
              <input type="text" name="title" placeholder="Title" class="form-input" required />
              <textarea name="content" placeholder="Content" class="form-input form-input-textarea" required></textarea>
              <div class="actions">
                <button class="button-submit button" type="submit">SUBMIT</button>
              </div>
            </form>
          </div>
        </div>
      </section>
      <hr />

      <section class="section">
        <h2 class="background-text section-title">Posts</h2>
        <% posts.forEach(post => { %>
        <div class="main-container">
          <div class="card">
            <h3 class="post-title"><%= post.title %></h3>
            <p><%= post.content %></p>
            <div class="actions">
              <a href="/edit-post/<%= post.id %>" class="button button-edit">EDIT</a>
              <form action="/delete-post/<%= post.id %>" method="POST">
                <button class="button-delete button" type="submit">DELETE</button>
              </form>
            </div>
          </div>
        </div>
        <% }); %>
      </section>
    </div>
  </body>
</html>
